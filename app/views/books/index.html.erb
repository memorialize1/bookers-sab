

<body>
<header>
<h1>Books</h1>
</header>

      <table>
          <thead>
          <tr>
              
              <th>Title</th>
              <th>body</th>
              <th colspan = "3"> </th> 
              
          </tr>
          </thead>
          
          <tbody>
              <% @book.each do |book| %>
              <tr>
                  <td> <%= book.title %> </td>
                  <td> <%= book.body %> </td>
                  <td>
                     <%= link_to "Show", book_path(book) %>
                     <%= link_to "Edit", edit_book_path(book) %>
                     <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "【確認】本当に削除してもよろしいですか？" } %>
                  </td>
              </tr>
              <% end %>
          </tbody>
      </table>
      
　　　<div class = "new">
        <h2>New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book' %>
        <% end %>
　　　</div>

